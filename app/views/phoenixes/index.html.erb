<h1>Listing phoenixes</h1>
<%	 #the paginate html content is given by the below line %>
<%= will_paginate @phoenix, :class => "apple_pagination" %>
<table>
  <tr>
    <th>Fact</th>
    <th>Content</th>
    <th>Made by</th>
    <th>Image</th>
    <th>No views</th>
    <th>Last seen</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @phoenixes.each do |phoenix| %>
  <tr>
    <td><%= phoenix.fact %></td>
    <td><%= truncate(phoenix.content, :limit => 25) %></td>
    <td><%= phoenix.made_by %></td>
    <td><%= link_to "Image","/assets/#{phoenix.image}" %></td>
    <td><%= phoenix.no_views %></td>
    <td><%= phoenix.last_seen %></td>
    <td><%= link_to 'Show', phoenix %></td>
    <td><%= link_to 'Edit', edit_phoenix_path(phoenix) %></td>
    <td><%#= link_to 'Destroy', phoenix, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <td><%= link_to 'Destroy', phoenix_destroy_path(phoenix), data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
<br/>

