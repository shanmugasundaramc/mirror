<h1>Listing facts</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Made by</th>
    <th>Heading</th>
    <th>Content</th>
    <th>Last seen</th>
    <th>Image</th>
    <th>Cost</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @facts.each do |fact| %>
  <tr>
    <td><%= fact.name %></td>
    <td><%= fact.made_by %></td>
    <td><%= fact.heading %></td>
    <td><%= fact.content %></td>
    <td><%= fact.last_seen %></td>
    <td><%= fact.image %></td>
    <td><%= fact.cost %></td>
    <td><%= link_to 'Show', fact %></td>
    <td><%= link_to 'Edit', edit_fact_path(fact) %></td>
    <td><%= link_to 'Destroy', fact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

